@using chefsndishes.Models
@model NewDish

<h1>Add a Dish!</h1>

<a href="/">Home</a>

<form asp-action="DishToDB" asp-controller="Home" method="post">
	<span asp-validation-for="Name"></span>
	<label asp-for="Name"></label>
	<input asp-for="Name">

	<span asp-validation-for="Calories"></span>
	<label asp-for="Calories"></label>
	<input asp-for="Calories">

	<span asp-validation-for="Description"></span>
	<label asp-for="Description"></label>
	<textarea asp-for="Description"></textarea>

	<span asp-validation-for="ChefID"></span>
	<label asp-for="ChefID"></label>
	<select asp-for="ChefID">
		@foreach (Chef c in @Model.Chefs)
		{
			<option value="@c.ChefID">@c.FirstName @c.LastName</option>
		}
	</select>

	<span asp-validation-for="Tastiness"></span>
	<label asp-for="Tastiness"></label>
	<select asp-for="Tastiness">
		<option value="1">1</option>
		<option value="2">2</option>
		<option value="3">3</option>
		<option value="4">4</option>
		<option value="5">5</option>
	</select>

	<button type="submit">Add Dish</button>
</form>